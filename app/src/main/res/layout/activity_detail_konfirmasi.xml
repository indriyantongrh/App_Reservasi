<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".KonfirmasiPembayaran.DetailKonfirmasi">


    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:id="@+id/linera1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        tools:ignore="MissingConstraints">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBiruTwitter"
            app:popupTheme="@style/ThemeOverlay.AppCompat"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Bukti Pembayaran"
                android:gravity="center"
                android:textSize="23dp"
                android:fontFamily="@font/sairasemibold"
                android:textStyle="bold"
                android:textColor="#fff"/>

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/linearLayoutw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:paddingTop="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:layout_width="360dp"
                    app:cardCornerRadius="15dp"
                    android:background="#CCffffff"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/layout_tanya_jawab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:paddingBottom="30dp"
                        android:padding="5dp"
                        >


                        <TextView
                            android:id="@+id/txt_nomorkegiatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nomor Kegiatan"
                            android:textStyle="italic"
                            android:textSize="20dp"
                            android:fontFamily="@font/sairaregular"
                            android:textColor="@color/colormerah"
                            android:paddingBottom="10dp"
                            />


                        <TextView
                            android:id="@+id/text_sekolah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/txt_nomorkegiatan"
                            android:text="Nama Sekolah :"
                            android:textSize="16sp"
                            android:paddingLeft="20dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/sairaregular"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_namasekolah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_nomorkegiatan"
                            android:layout_toEndOf="@+id/text_sekolah"
                            android:layout_toRightOf="@+id/text_sekolah"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/sairaregular"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/text_tanggalkegiatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/text_sekolah"
                            android:text="Tanggal Kegiatan :"
                            android:textSize="16sp"
                            android:fontFamily="@font/sairaregular"
                            android:paddingLeft="20dp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>


                        <TextView
                            android:id="@+id/txt_tanggalbooking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_namasekolah"
                            android:layout_marginStart="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_toEndOf="@+id/text_sekolah"
                            android:layout_toRightOf="@+id/text_sekolah"
                            android:fontFamily="@font/sairaregular"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_jumlahsiswa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/text_tanggalkegiatan"
                            android:text="Jumlah Siswa :"
                            android:textSize="16sp"
                            android:fontFamily="@font/sairaregular"
                            android:textColor="#000000"
                            android:paddingLeft="20dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_jumlahsiswa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_tanggalbooking"
                            android:layout_toEndOf="@+id/text_sekolah"
                            android:layout_toRightOf="@+id/text_sekolah"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/text_totalbayar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/text_jumlahsiswa"
                            android:text="Total Bayar :"
                            android:textSize="16sp"
                            android:fontFamily="@font/sairaregular"
                            android:textColor="#000000"
                            android:paddingLeft="20dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_totalbayar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_jumlahsiswa"
                            android:layout_toEndOf="@+id/text_jumlahsiswa"
                            android:layout_toRightOf="@+id/text_jumlahsiswa"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/text_keterangan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/text_totalbayar"
                            android:text="Pembayaran :"
                            android:textSize="16sp"
                            android:fontFamily="@font/sairaregular"
                            android:textColor="#000000"
                            android:paddingLeft="20dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_keterangan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_totalbayar"
                            android:layout_toEndOf="@+id/text_totalbayar"
                            android:layout_toRightOf="@+id/text_totalbayar"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>


                        <android.support.v7.widget.CardView
                            android:id="@+id/btnuploadgambar"
                            android:layout_width="180dp"
                            android:layout_height="35dp"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:background="#000"
                            android:elevation="9dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/text_keterangan"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="@color/colorBiruTwitter"
                            app:cardCornerRadius="10dp"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:text="Cek Harga">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:fontFamily="@font/sairasemibold"
                                android:text="Pilih bukti upload"/>
                        </android.support.v7.widget.CardView>

                        <ImageView
                            android:id="@+id/image"
                            android:paddingTop="10dp"
                            android:paddingBottom="30dp"
                            android:layout_below="@+id/btnuploadgambar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/btnkonfirmasi"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="249dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kotak"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="90dp"
                    app:cardBackgroundColor="@color/colorBiruTwitter"
                    android:paddingRight="90dp"
                    app:cardCornerRadius="15dp"
                    android:textStyle="bold"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="27dp"
                        android:textColor="#fff"
                        android:fontFamily="@font/sairasemibold"
                        android:text="Konfirmasi"/>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>