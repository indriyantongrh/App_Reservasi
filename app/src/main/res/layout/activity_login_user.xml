<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBiruTwitter"
    tools:context=".LoginRegister.LoginUser">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBiruTwitter"
        app:popupTheme="@style/ThemeOverlay.AppCompat"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login Member"
            android:gravity="center"
            android:fontFamily="@font/sairasemibold"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#fff"/>

    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/image12"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingHorizontal="10dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="20dp"
        android:src="@drawable/logokandriv3"
        android:layout_marginBottom="30dp" />



        <LinearLayout
            android:id="@+id/kotak"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/image12"
            android:background="@drawable/white_right_corner"
            android:elevation="4dp"
            android:paddingTop="15dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="LOGIN MEMBER"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_below="@+id/image12"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txtusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_mail"
                    android:ems="50"
                    android:hint="@string/hint_email"
                    android:fontFamily="@font/sairaregular"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="17sp"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txtpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtuser"
                    android:layout_alignStart="@+id/txtuser"
                    android:layout_below="@+id/txtuser"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_action_pwd"
                    android:ems="50"
                    android:hint="@string/hint_password"
                    android:singleLine="true"
                    android:fontFamily="@font/sairaregular"
                    android:inputType="textPassword"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorAbuabu"
                    android:textSize="17sp" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


    <Button
        android:id="@+id/btnlogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/kotak"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/sairasemibold"
        android:background="@drawable/rec_gradient"
        android:elevation="10dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnregistrasi"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnlogin"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:background="@drawable/rec_gradientputih"
        android:padding="4dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:text="Registrasi Member"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/sairasemibold"
        android:textSize="15dp"
        android:textStyle="bold" />




</RelativeLayout>