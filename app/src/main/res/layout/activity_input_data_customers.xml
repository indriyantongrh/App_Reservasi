<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    tools:context=".PaketSingkong.InputDataCustomers">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservasi Sekarang"
            android:gravity="center"
            android:fontFamily="@font/sairasemibold"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#fff"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textGrid"
            android:text="Isi Data dengan benar"
            android:textSize="28sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_centerInParent="true"
            android:paddingTop="80dp"
            android:textStyle="bold"
            android:paddingBottom="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:paddingTop="20dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:layout_width="360dp"
            app:cardCornerRadius="15dp"
            android:background="#CCffffff"
            android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">





        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_namalengkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtnamalengkap"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/hint_namalengkap"
                android:singleLine="true"
                android:inputType="none"
                android:fontFamily="@font/sairaregular"
                android:editable="false"
                android:text="" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_nomortelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtnomorhp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/hint_notelpon"
                android:inputType="none"
                android:fontFamily="@font/sairaregular"
                android:editable="false"
                android:singleLine="true"

                android:text="" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_namasd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtnamasd"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/hint_namasd"
                android:fontFamily="@font/sairaregular"
                android:inputType="textCapCharacters"
                android:singleLine="true"
                android:text="" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/txttanggalbooking"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none"
                android:fontFamily="@font/sairaregular"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/hint_tanggalbooking"
                 />

            <ImageButton
                android:id="@+id/btntanggal"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_weight="1"

                android:src="@drawable/date"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/txtjumlahsiswa"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/sairaregular"
                android:ems="10"
                android:hint="@string/hint_jumlahsiswa"
                android:inputType="number"
                android:singleLine="true"
                android:text="" />

            <Button
                android:id="@+id/btncekharga"
                android:layout_width="180dp"
                android:layout_height="35dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@drawable/rec_gradient"
                android:elevation="9dp"
                android:layout_weight="1"
                android:text="Cek Harga"
                android:src="@drawable/date"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Penawaran"
            android:fontFamily="@font/sairasemibold"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/jumlahharga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp0"
            android:textStyle="italic|bold"
            android:fontFamily="@font/sairasemibold"
            android:textColor="@color/colormerah"
            android:textSize="21sp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_jumlahguru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtjumlahguru"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/hint_jumlahguru"
                android:inputType="number"
                android:fontFamily="@font/sairaregular"
                android:singleLine="true"
                android:text="" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_jumlahsupir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtjumlahsupir"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="@string/hint_jumlahsupir"
                android:fontFamily="@font/sairaregular"
                android:inputType="number"
                android:singleLine="true"
                android:text="" />
        </android.support.design.widget.TextInputLayout>


        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:paddingTop="6dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" >
            <RadioButton
                android:id="@+id/radiobayarfull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="13dp"
                android:fontFamily="@font/sairasemibold"
                android:text="Bayar Full" />

            <RadioButton
                android:id="@+id/radiobayardp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="@font/sairasemibold"
                android:text="Bayar DP 50%" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah yang harus dibayar"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/sairasemibold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/jumlahdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp0"
            android:fontFamily="@font/sairasemibold"
            android:textStyle="italic|bold"
            android:textColor="@color/colormerah"
            android:textSize="21sp"/>

        </LinearLayout>
        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/btnbayar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rec_gradient"
            android:elevation="10dp"
            android:paddingLeft="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/kotak"
            android:paddingRight="50dp"
            android:text="BAYAR"
            android:textColor="#fff"
            android:fontFamily="@font/sairasemibold"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>
    </ScrollView>
<!--</LinearLayout>-->
</LinearLayout>