<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Beranda.Beranda">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

   <!-- -&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;Layout Viewpager

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_beranda"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#efefef" />
    =============-->

        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="wrap_content"
            android:layout_height="200dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.universedeveloper.mybookingfieldtrip._sliders.SliderView
                    android:id="@+id/sliderView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_indicator"/>

            <LinearLayout
                android:id="@+id/pagesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"/>

        </RelativeLayout>


    <TextView
        android:id="@+id/text_masakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="== SELAMAT DATANG == \n DESA WISATA KANDRI"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />
    -------------------------------Layout Kategori masakan

    <RelativeLayout
        android:id="@+id/layout_kategori_masakan1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/text_masakan"
        android:layout_marginLeft="15dp"
        android:gravity="center"

        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">
        -----------------Card masakan pedas

        <android.support.v7.widget.CardView
            android:id="@+id/btnprofiledesa"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="Profile Kandri"
                    android:textColor="@color/colorBlack"/>

                <!--<View
                    android:id="@+id/View1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/text1"
                    android:background="@color/colorTab2" />-->
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        -----------------Card olahan daging

        <android.support.v7.widget.CardView
            android:id="@+id/btn_bookingtanggal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:src="@drawable/booking" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="Booking Tanggal"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />

<!--                <View
                    android:id="@+id/View2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/text2"
                    android:background="@color/colorTab2"  />-->
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_kategori_masakan2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/layout_kategori_masakan1"
            android:layout_marginLeft="15dp"
            android:gravity="center"

            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">
            -----------------Card masakan pedas

            <android.support.v7.widget.CardView
                android:id="@+id/btnbungiadmin"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/whatsapp" />

                    <TextView
                        android:id="@+id/text24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:text="Hubungi Admin"
                        android:textColor="@color/colorBlack"/>

                    <!--<View
                        android:id="@+id/View1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_above="@+id/text1"
                        android:background="@color/colorTab2" />-->
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            -----------------Card olahan daging

            <android.support.v7.widget.CardView
                android:id="@+id/btnjadawal"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:src="@drawable/date2" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Lihat Jadwal"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <!--                <View
                                        android:id="@+id/View2"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_above="@+id/text2"
                                        android:background="@color/colorTab2"  />-->
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>



    </RelativeLayout>
</FrameLayout>